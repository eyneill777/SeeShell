MDScreen:
    name: "login"
    email: email
    password: password
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDLabel:
            text: "SeeShell"
            font_size: "18sp"
            font_name: "assets/poppins/Poppins-Regular.ttf"
            pos_hint: {"center_x": .615, "center_y": .949}
        Image:
            source: "assets/logo.jpg"  
            size_hint: .26, .26
            pos_hint: {"center_x": .22, "center_y": .8}
        MDLabel:
            text: "Proceed with your"
            font_size: "22sp"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            color: 120/255, 120/255, 120/255, 1
            pos_hint: {"center_x": .6, "center_y": .65}
        MDLabel:
            text: "Login"
            font_size: "28sp"
            font_name: "assets/poppins/Poppins-SemiBold.ttf"
            pos_hint: {"center_x": .6, "center_y": .58}
        MDFloatLayout:
            size_hint: .79, .08
            pos_hint: {"center_x": .5, "center_y": .42}
            MDLabel:
                text: "Email"
                font_size: "14sp"
                font_name: "assets/poppins/Poppins-Medium.ttf"
                pos_hint: {"center_x": .5, "center_y": .9}
            TextInput:
                id: email
                size_hint_y: .75
                font_name: "assets/poppins/Poppins-Regular.ttf"
                pos_hint: {"center_x": .49, "center_y": .4}
                background_color: 0, 0, 0, 0
                cursor_color: 0, 0, 0, 1
                cursor_width: "2sp"
                foreground_color: 120/255, 120/255, 120/255, 1
                font_size: "17sp"
                multiline: False
            Image:
                source: "assets/user.png"
                pos_hint: {"center_x": .96, "center_y": .5}
                size_hint: .5, .5
            MDFloatLayout:
                pos_hint: {"center_x": .5, "center_y": 0}
                size_hint_y: .03
                md_bg_color: 120/255, 120/255, 120/255, 1
        MDFloatLayout:
            size_hint: .79, .08
            pos_hint: {"center_x": .5, "center_y": .28}
            MDLabel:
                text: "Password"
                font_size: "14sp"
                font_name: "assets/poppins/Poppins-Medium.ttf"
                pos_hint: {"center_x": .5, "center_y": .9}
            TextInput:
                id: password
                size_hint_y: .75
                font_name: "assets/poppins/Poppins-Regular.ttf"
                pos_hint: {"center_x": .49, "center_y": .4}
                background_color: 0, 0, 0, 0
                cursor_color: 0, 0, 0, 1
                cursor_width: "2sp"
                font_size: "17sp"
                multiline: False
                password: True
            Image:
                source: "assets/key.png"
                pos_hint: {"center_x": .96, "center_y": .5}
                size_hint: .4, .4
            MDFloatLayout:
                pos_hint: {"center_x": .5, "center_y": 0}
                size_hint_y: .03
                md_bg_color: 120/255, 120/255, 120/255, 1
        Button:
            text: "Login"
            on_press: app.authenticate()
            background_color: 0, 0, 0, 0
            font_name: "assets/poppins/Poppins-Medium.ttf"
            size_hint: .79, .08
            pos_hint: {"center_x": .5, "center_y": .15}
            canvas.before:
                Color:
                    rgba: 226/225, 0, 48/255, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [2]
    MDTextButton:
        text: "Register"
        font_size: "13sp"
        pos_hint: {"center_x": .5, "center_y": .07}
        halign: "center"
        color: 120/255, 120/255, 120/255, 1