<PhotoAlbum>:
    GridLayout:
        cols: 2
        spacing: 10
        MDLabel:
            text: "SeeShell"
            font_size: "20sp"
            font_name: "assets/poppins/Poppins-Regular.ttf"
            size_hint: None, None
            pos_hint: {"center_x": .5, "center_y": .96}

        Image:
            source: "assets/logo.jpg"
            size_hint: None, None
            pos_hint: {"center_x": .5, "center_y": .8}

        MDRectangleFlatButton:
            text: "DELETE PHOTO"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            pos_hint: {"center_x": .75, "center_y": .2}
            size_hint: None, None
            text_color: 1, 1, 1, 1
            md_bg_color: 79/255, 193/255, 233/255, 1
            on_press: self.delete_image(self)

        MDRectangleFlatButton:
            text: "GO BACK TO CAMERA"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            pos_hint: {"center_x": .25, "center_y": .2}
            size_hint: None, None
            text_color: 1, 1, 1, 1
            md_bg_color: 79/255, 193/255, 233/255, 1
            on_press: root.go_to_camera_screen(self)

