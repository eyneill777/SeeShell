<accountScreen>:
    FloatLayout:
        MDLabel:
            text: "SeeShell"
            font_size: "20sp"
            font_name: "assets/poppins/Poppins-Regular.ttf"
            size_hint: None, None
            pos_hint: {"center_x": .5, "center_y": .96}

        Image:
            source: "assets/logo.jpg"
            size_hint: .26, .26
            pos_hint: {"center_x": .5, "center_y": .8}

        MDTextField:
            id: email_input
            hint_text: "Email"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            helper_text_mode: "on_focus"
            size_hint: None, None
            size: 200, 48
            pos_hint: {"center_x": .5, "center_y": .6}

        MDTextField:
            id: username_input
            hint_text: "Username"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            helper_text_mode: "on_focus"
            size_hint: None, None
            size: 200, 48
            pos_hint: {"center_x": .5, "center_y": .5}

        MDTextField:
            id: password_input
            hint_text: "Password"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            helper_text_mode: "on_focus"
            size_hint: None, None
            size: 200, 48
            pos_hint: {"center_x": .5, "center_y": .4}
            password: True

        MDTextField:
            id: ver_password_input
            hint_text: "Verify Password "
            font_name: "assets/poppins/Poppins-Medium.ttf"
            helper_text_mode: "on_focus"
            size_hint: None, None
            size: 200, 48
            pos_hint: {"center_x": .5, "center_y": .3}
            password: True

        MDRectangleFlatButton:
            text: "CREATE ACCOUNT"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            pos_hint: {"center_x": .5, "center_y": .15}
            size_hint: .8, .07
            text_color: 1, 1, 1, 1
            md_bg_color: 79/255, 193/255, 233/255, 1
            on_press: root.create_account(self)




