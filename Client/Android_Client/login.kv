<LoginScreen>:
    FloatLayout:
        MDLabel:
            text: "SeeShell"
            font_size: "20sp"
            font_name: "assets/poppins/Poppins-Regular.ttf"
            size_hint: None, None
            pos_hint: {"center_x": .5, "center_y": .96}

        Image:
            source: "assets/logo.jpg"
            size_hint: .5, .5
            pos_hint: {"center_x": .5, "center_y": .8}

        MDTextField:
            id: email_input
            hint_text: "Email"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            helper_text_mode: "on_focus"
            size_hint: None, None
            size: 200, 48
            pos_hint: {"center_x": .5, "center_y": .6}

        MDTextField:
            id: password_input
            hint_text: "Password"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            helper_text_mode: "on_focus"
            size_hint: None, None
            size: 200, 48
            pos_hint: {"center_x": .5, "center_y": .5}
            password: True

        MDRectangleFlatButton:
            text: "LOGIN"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            pos_hint: {"center_x": .5, "center_y": .22}
            size_hint: .8, .07
            text_color: 1, 1, 1, 1
            md_bg_color: 79/255, 193/255, 233/255, 1
            on_press: root.authenticate()

        MDLabel:
            text: "Don't have an account? Sign Up"
            font_size: "14sp"
            font_name: "assets/poppins/Poppins-Regular.ttf"
            pos_hint: {"center_x": .5, "center_y": .15}
            halign: "center"
            markup: True

        MDRectangleFlatButton:
            text: "SIGN UP"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            pos_hint: {"center_x": .5, "center_y": .15}
            size_hint: .8, .07
            text_color: 1, 1, 1, 1
            md_bg_color: 79/255, 193/255, 233/255, 1
            on_press: root.go_to_create_account()








