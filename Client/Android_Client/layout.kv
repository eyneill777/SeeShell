<captureScreen>:
    Preview:
        id: camera
        aspect_ratio: '4:3'
        orientation: "landscape"
        letterbox_color: 1, 1, 1, 1
    MDFloatLayout:
        MDLabel:
            text: "SeeShell"
            font_size: "18sp"
            font_name: "assets/poppins/Poppins-Regular.ttf"
            pos_hint: {"center_x": .9, "center_y": .85}
        Image:
            source: "assets/logo.png"
            size_hint: .25, .25
            pos_hint: {"center_x": .22, "center_y": .85}
        MDRoundFlatButton:
            text: "Take Photo"
            font_name: "assets/poppins/Poppins-SemiBold.ttf"
            pos_hint: {"center_x": .5, "center_y": .23}
            size_hint: .8, .07
            text_color: 1, 1, 1, 1
            md_bg_color: 79/255, 193/255, 233/255, 1
            on_press: root.take_photo()
        MDRoundFlatButton:
            text: "Go to Gallery"
            font_name: "assets/poppins/Poppins-SemiBold.ttf"
            pos_hint: {"center_x": .5, "center_y": .13}
            size_hint: .8, .07
            text_color: 79/255, 193/255, 233/255, 1
            on_press: root.manager.current = 'gallery_screen'
        FileChoose:
            text: "Upload Image"
            font_name: "assets/poppins/Poppins-SemiBold.ttf"
            pos_hint: {"center_x": .5, "center_y": .06}
            size_hint: .8, .07
            text_color: 79/255, 193/255, 233/255, 1
            on_release: self.choose()

<blurbScreen>:
    FloatLayout:
        MDLabel:
            id: blurb_label
            text: "We haven't gotten this shell identified yet.  Please check back later"
            font_size: "10sp"
            font_name: "assets/poppins/Poppins-Regular.ttf"
            size_hint: None, None
            pos_hint: {"center_x": .5, "center_y": .5}
        MDIconButton:
            icon: "chevron-left"
            user_font_size: "35sp"
            on_release: root.manager.current = 'gallery_screen'
            pos_hint: {"center_x": .1, "center_y": .15}
        MDLabel:
            text: "Back"
            font_size: "18sp"
            font_name: "assets/poppins/Poppins-Regular.ttf"
            pos_hint: {"center_x": .615, "center_y": .15}
    MDFloatLayout:
        id: layout

<PhotoAlbum>:
    MDBoxLayout:
        orientation: 'vertical'
        MDIconButton:
            icon: "chevron-left"
            user_font_size: "35sp"
            on_release: root.manager.current = 'capture_screen'
            pos_hint: {"center_x": .1, "center_y": .949}

        ScrollView:
            pos_hint: {"center_x": 0.6, "center_y": 0.5}
            size_hint: (0.8, 0.5)
            do_scroll_y: True
            do_scroll_x: False

            GridLayout:
                size_hint: (None, None)
                id: ImageLayout
                cols: 2
                spacing: (10,0)

        MDLabel:
            text: "Tap image to see identification \nor select images to delete"
            spacing: 100
            font_size: "11sp"
            font_name: "assets/poppins/Poppins-Regular.ttf"
            pos_hint: {"center_x": 0.5}
            size_hint: 1,0.15
            halign: 'center'


        # IF WE CANNOT FIGURE OUT HOW TO ANCHOR THIS PART TO THE BOTTOM, JUST PUT IT AT THE TOP IF WORST COMES TO WORST
        MDRoundFlatButton:
            text: "SELECT IMAGES"
            spacing: 100
            id: delete_button
            font_name: "assets/poppins/Poppins-SemiBold.ttf"
            pos_hint: {"center_x": .5}
            size_hint: .8, .07
            text_color: 79/255, 193/255, 233/255, 1
            on_press: root.delete_image()



<CropScreen>
    MDFloatLayout:
        id: layout

ScreenManager:
    LoginScreen:
        name: "login"

    accountScreen:
        name: "create_account_screen"

    captureScreen:
        name: "capture_screen"

    PhotoAlbum:
        name: "gallery_screen"

    blurbScreen:
        name: "blurb_screen"

    CropScreen:
        name: "crop_screen"
