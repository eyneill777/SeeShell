<LoginScreen>:
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDLabel:
            text: "SeeShell"
            font_size: "18sp"
            font_name: "assets/poppins/Poppins-Regular.ttf"
            pos_hint: {"center_x": .9, "center_y": .8}
        Image:
            source: "assets/logo.png"
            size_hint: .25, .25
            pos_hint: {"center_x": .22, "center_y": .8}
        MDLabel:
            text: "Proceed with your"
            font_size: "22sp"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            color: 120/255, 120/255, 120/255, 1
            pos_hint: {"center_x": .6, "center_y": .65}
        MDLabel:
            text: "Login"
            font_size: "28sp"
            font_name: "assets/poppins/Poppins-SemiBold.ttf"
            pos_hint: {"center_x": .6, "center_y": .58}
        MDFloatLayout:
            size_hint: .79, .08
            pos_hint: {"center_x": .5, "center_y": .5}    
            MDTextField:
                id: email_input
                hint_text: "Username or Email"
                font_name: "assets/poppins/Poppins-Medium.ttf"
                helper_text_mode: "on_focus"
                size_hint: None, None
                size: 250, 48
                pos_hint: {"center_x": .45, "center_y": .5}
            Image:
                source: "assets/user.png"
                pos_hint: {"center_x": .96, "center_y": .5}
                size_hint: .5, .5
            MDFloatLayout:
                pos_hint: {"center_x": .5, "center_y": 0}
                size_hint_y: .03
        MDFloatLayout:
            size_hint: .79, .08
            pos_hint: {"center_x": .5, "center_y": .4}
            MDTextField:
                id: password_input
                hint_text: "Password"
                font_name: "assets/poppins/Poppins-Medium.ttf"
                helper_text_mode: "on_focus"
                size_hint: None, None
                size: 250, 48
                pos_hint: {"center_x": .45, "center_y": .4}
                password: True
            Image:
                source: "assets/key.png"
                pos_hint: {"center_x": .96, "center_y": .5}
                size_hint: .4, .4
            MDFloatLayout:
                pos_hint: {"center_x": .5, "center_y": 0}
                size_hint_y: .03
        MDRoundFlatButton:
            text: "LOGIN"
            font_name: "assets/poppins/Poppins-SemiBold.ttf"
            pos_hint: {"center_x": .5, "center_y": .22}
            size_hint: .8, .07
            text_color: 1, 1, 1, 1
            md_bg_color: 79/255, 193/255, 233/255, 1
            on_press: root.authenticate()
        MDLabel:
            text: "Don't have an account? Sign Up"
            font_size: "14sp"
            font_name: "assets/poppins/Poppins-Regular.ttf"
            pos_hint: {"center_x": .5, "center_y": .15}
            color: 120/255, 120/255, 120/255, 1
            halign: "center"
            markup: True
        MDRoundFlatButton:
            text: "SIGN UP"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            pos_hint: {"center_x": .5, "center_y": .1}
            size_hint: .8, .07
            text_color: 79/255, 193/255, 233/255, 1
            on_release: root.manager.current = 'create_account_screen'

<accountScreen>:
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon: "chevron-left"
            user_font_size: "35sp"
            on_release: root.manager.current = 'login'
            pos_hint: {"center_x": .1, "center_y": .949}
        MDLabel:
            text: "Back"
            font_size: "18sp"
            font_name: "assets/poppins/Poppins-Regular.ttf"
            pos_hint: {"center_x": .615, "center_y": .949}
        MDLabel:
            text: "SeeShell"
            font_size: "18sp"
            font_name: "assets/poppins/Poppins-Regular.ttf"
            pos_hint: {"center_x": .9, "center_y": .8}
        Image:
            source: "assets/logo.png"
            size_hint: .25, .25
            pos_hint: {"center_x": .22, "center_y": .8}
        MDLabel:
            text: "Enter your details to"
            font_size: "22sp"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            color: 120/255, 120/255, 120/255, 1
            pos_hint: {"center_x": .6, "center_y": .65}
        MDLabel:
            text: "Sign up"
            font_size: "28sp"
            font_name: "assets/poppins/Poppins-SemiBold.ttf"
            pos_hint: {"center_x": .6, "center_y": .58}
        MDTextField:
            id: email_input
            hint_text: "Email"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            helper_text_mode: "on_focus"
            size_hint: None, None
            size: 250, 48
            pos_hint: {"center_x": .45, "center_y": .5}
        MDTextField:
            id: username_input
            hint_text: "Username"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            helper_text_mode: "on_focus"
            size_hint: None, None
            size: 250, 48
            pos_hint: {"center_x": .45, "center_y": .4}    
        MDTextField:
            id: password_input
            hint_text: "Password"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            helper_text_mode: "on_focus"
            size_hint: None, None
            size: 250, 48
            pos_hint: {"center_x": .45, "center_y": .3}
            password: True   
        MDTextField:
            id: ver_password_input
            hint_text: "Verify Password "
            font_name: "assets/poppins/Poppins-Medium.ttf"
            helper_text_mode: "on_focus"
            size_hint: None, None
            size: 250, 48
            pos_hint: {"center_x": .45, "center_y": .2}
            password: True
        MDRoundFlatButton:
            text: "CREATE ACCOUNT"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            pos_hint: {"center_x": .5, "center_y": .1}
            size_hint: .8, .07
            text_color: 1, 1, 1, 1
            md_bg_color: 79/255, 193/255, 233/255, 1
            on_press: root.create_account()

<captureScreen>:
    Camera:
        id: camera
        resolution: (640, 480)
        play: True
    MDFloatLayout:
        MDLabel:
            text: "SeeShell"
            font_size: "20sp"
            font_name: "assets/poppins/Poppins-Regular.ttf"
            size_hint: None, None
            pos_hint: {"center_x": .5, "center_y": .96}
        Image:
            source: "assets/logo.png"
            size_hint: .2, .2
            pos_hint: {"center_x": .5, "center_y": .86}
        MDRoundFlatButton:
            text: "Take Photo"
            font_name: "assets/poppins/Poppins-SemiBold.ttf"
            pos_hint: {"center_x": .5, "center_y": .3}
            size_hint: .8, .07
            text_color: 1, 1, 1, 1
            md_bg_color: 79/255, 193/255, 233/255, 1
            on_press: root.take_photo()
        MDRoundFlatButton:
            text: "Go to Gallery"
            font_name: "assets/poppins/Poppins-SemiBold.ttf"
            pos_hint: {"center_x": .5, "center_y": .20}
            size_hint: .8, .07
            text_color: 79/255, 193/255, 233/255, 1
            on_press: root.manager.current = 'gallery_screen'
        MDRoundFlatButton:
            text: "Upload Image"
            font_name: "assets/poppins/Poppins-SemiBold.ttf"
            pos_hint: {"center_x": .5, "center_y": .13}
            size_hint: .8, .07
            text_color: 79/255, 193/255, 233/255, 1
            on_press: root.add_image()

<blurbScreen>:
    FloatLayout:
        MDRectangleFlatButton:
            text: "BACK"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            pos_hint: {"center_x": .25, "center_y": .2}
            size_hint: None, None
            text_color: 1, 1, 1, 1
            md_bg_color: 79/255, 193/255, 233/255, 1
            on_press: root.manager.current = 'gallery_screen'
        MDLabel:
            id: blurb_label
            text: "We haven't gotten this shell identified yet.  Please check back later"
            font_size: "10sp"
            font_name: "assets/poppins/Poppins-Regular.ttf"
            size_hint: None, None
            pos_hint: {"center_x": .5, "center_y": .5}
        MDIconButton:
            icon: "chevron-left"
            user_font_size: "35sp"
            on_release: root.manager.current = 'gallery_screen'
            pos_hint: {"center_x": .1, "center_y": .15}
        MDLabel:
            text: "Back"
            font_size: "18sp"
            font_name: "assets/poppins/Poppins-Regular.ttf"
            pos_hint: {"center_x": .615, "center_y": .15}

<PhotoAlbum>: 
    MDFloatLayout:
        MDIconButton:
            icon: "chevron-left"
            user_font_size: "35sp"
            on_release: root.manager.current = 'capture_screen'
            pos_hint: {"center_x": .1, "center_y": .949}
        MDLabel:
            text: "Back"
            font_size: "18sp"
            font_name: "assets/poppins/Poppins-Regular.ttf"
            pos_hint: {"center_x": .615, "center_y": .949}

        # IF WE CANNOT FIGURE OUT HOW TO ANCHOR THIS PART TO THE BOTTOM, JUST PUT IT AT THE TOP IF WORST COMES TO WORST

        MDRoundFlatButton:
            text: "View Info"
            font_name: "assets/poppins/Poppins-SemiBold.ttf"
            pos_hint: {"center_x": .5, "center_y": .3}
            size_hint: .8, .07
            text_color: 1, 1, 1, 1
            md_bg_color: 79/255, 193/255, 233/255, 1
            on_press: root.manager.current = 'blurb_screen'
        MDRoundFlatButton:
            text: "Delete Photo"
            font_name: "assets/poppins/Poppins-SemiBold.ttf"
            pos_hint: {"center_x": .5, "center_y": .2}
            size_hint: .8, .07
            text_color: 79/255, 193/255, 233/255, 1
            on_press: self.parent.parent.delete_image()
        ScrollView:
            pos_hint: {"center_x": .5, "top": .75}
            GridLayout:
                pos_hint: {"center_x": .5}
                size_hint: (None,None)
                id: ImageLayout
                cols: 3
                spacing: (25,0)


ScreenManager:
    LoginScreen:
        name: "login"

    accountScreen:
        name: "create_account_screen"

    captureScreen:
        name: "capture_screen"

    PhotoAlbum:
        name: "gallery_screen"

    blurbScreen:
        name: "blurb_screen"
