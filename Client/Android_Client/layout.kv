<LoginScreen>:
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDLabel:
            text: "SeeShell"
            font_size: "18sp"
            font_name: "assets/poppins/Poppins-Regular.ttf"
            pos_hint: {"center_x": .9, "center_y": .8}
        Image:
            source: "assets/logo.png"
            size_hint: .25, .25
            pos_hint: {"center_x": .22, "center_y": .8}
        MDLabel:
            text: "Proceed with your"
            font_size: "22sp"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            color: 120/255, 120/255, 120/255, 1
            pos_hint: {"center_x": .6, "center_y": .65}
        MDLabel:
            text: "Login"
            font_size: "28sp"
            font_name: "assets/poppins/Poppins-SemiBold.ttf"
            pos_hint: {"center_x": .6, "center_y": .58}
        MDFloatLayout:
            size_hint: .79, .08
            pos_hint: {"center_x": .5, "center_y": .5}    
            MDTextField:
                id: email_input
                hint_text: "Username or Email"
                font_name: "assets/poppins/Poppins-Medium.ttf"
                helper_text_mode: "on_focus"
                size_hint: None, None
                size: 250, 48
                pos_hint: {"center_x": .45, "center_y": 0}
            MDTextField:
                id: ip_input
                hint_text: "server_ip"
                font_name: "assets/poppins/Poppins-Medium.ttf"
                helper_text_mode: "on_focus"
                size_hint: None, None
                size: 250, 48
                pos_hint: {"center_x": .45, "center_y": 1}
            Image:
                source: "assets/user.png"
                pos_hint: {"center_x": .96, "center_y": 0}
                size_hint: .5, .5
        MDFloatLayout:
            size_hint: .79, .08
            pos_hint: {"center_x": .5, "center_y": .4}
            MDTextField:
                id: password_input
                hint_text: "Password"
                font_name: "assets/poppins/Poppins-Medium.ttf"
                helper_text_mode: "on_focus"
                size_hint: None, None
                size: 250, 48
                pos_hint: {"center_x": .45, "center_y": .4}
                password: True
            Image:
                source: "assets/key.png"
                pos_hint: {"center_x": .96, "center_y": .5}
                size_hint: .4, .4
        MDRoundFlatButton:
            text: "LOGIN"
            font_name: "assets/poppins/Poppins-SemiBold.ttf"
            pos_hint: {"center_x": .5, "center_y": .22}
            size_hint: .8, .07
            text_color: 1, 1, 1, 1
            md_bg_color: 79/255, 193/255, 233/255, 1
            on_press: root.authenticate()
        MDLabel:
            text: "Don't have an account? Sign Up"
            font_size: "14sp"
            font_name: "assets/poppins/Poppins-Regular.ttf"
            pos_hint: {"center_x": .5, "center_y": .15}
            color: 120/255, 120/255, 120/255, 1
            halign: "center"
            markup: True
        MDRoundFlatButton:
            text: "SIGN UP"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            pos_hint: {"center_x": .5, "center_y": .1}
            size_hint: .8, .07
            text_color: 79/255, 193/255, 233/255, 1
            on_release: root.manager.current = 'create_account_screen'

