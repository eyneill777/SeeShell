<captureScreen>:
    FloatLayout:
        MDLabel:
            text: "SeeShell"
            font_size: "20sp"
            font_name: "assets/poppins/Poppins-Regular.ttf"
            size_hint: None, None
            pos_hint: {"center_x": .5, "center_y": .96}
        Image:
            source: "assets/logo.jpg"
            size_hint: .2, .2
            pos_hint: {"center_x": .5, "center_y": .86}

        MDRectangleFlatButton:
            text: "TAKE PHOTO"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            pos_hint: {"center_x": .5, "center_y": .25}
            size_hint: .2, .05
            text_color: 1, 1, 1, 1
            md_bg_color: 210/255, 180/255, 140/255, 1
            on_press: root.take_photo()

        MDRectangleFlatButton:
            text: "GO TO COLLECTION"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            pos_hint: {"center_x": .5, "center_y": .15}
            size_hint: .2, .05
            text_color: 1, 1, 1, 1
            md_bg_color: 79/255, 193/255, 233/255, 1
            on_press: root.switch_to_album()

        MDRectangleFlatButton:
            text: "UPLOAD IMAGE"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            pos_hint: {"center_x": .5, "center_y": .1}
            size_hint: .2, .05
            text_color: 1, 1, 1, 1
            md_bg_color: 79/255, 193/255, 233/255, 1
            on_press: root.add_image()

        MDRectangleFlatButton:
            text: "VIEW MATCH"
            font_name: "assets/poppins/Poppins-Medium.ttf"
            pos_hint: {"center_x": .5, "center_y": .05}
            size_hint: .2, .05
            text_color: 1, 1, 1, 1
            md_bg_color: 79/255, 193/255, 233/255, 1
            on_press: root.go_to_blurb_screen()